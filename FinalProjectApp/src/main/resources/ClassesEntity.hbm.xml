<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.test.models.ClassesEntity" table="Classes" schema="finalprojectapp">
        <id name="classId">
            <column name="classID" sql-type="varchar(40)" length="40"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="schoolName">
            <column name="schoolName" sql-type="varchar(60)" length="60" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>