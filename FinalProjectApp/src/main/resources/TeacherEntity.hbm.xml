<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.test.models.TeacherEntity" table="Teacher" schema="finalprojectapp">
        <id name="userName">
            <column name="userName" sql-type="varchar(40)" length="40"/>
        </id>
        <property name="firstName">
            <column name="firstName" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="lastName">
            <column name="lastName" sql-type="varchar(60)" length="60"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(40)" length="40"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>